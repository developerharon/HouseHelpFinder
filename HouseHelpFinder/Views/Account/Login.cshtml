@model LoginModel

<div class="text-center">
    <form style="width:100%; max-width:330px; padding:15px; margin: auto" asp-action="Login" method="post">
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

        <img class="mb-4" src="/images/profile-pic.png" alt="" width="72" height="72" />

        <h1 class="h3 mb-3 font-weight-normal">Please Login</h1>

        <div class="form-group">
            <label asp-for="Email" class="sr-only"></label>
            <input type="email" asp-for="Email" class="form-control text-center" placeholder="Email address" style="margin-bottom:10px;" autofocus />
        </div>

        <div class="form-group">
            <label asp-for="Password" class="sr-only"></label>
            <input type="password" asp-for="Password" class="form-control text-center" placeholder="Password" />
        </div>

        <div style="padding: 3px;"><span asp-validation-for="Email" class="text-danger text-decoration-none p-2"></span></div>
        <button class="btn btn-lg btn-outline-success btn-block" type="submit">Login</button>
    </form>
</div>