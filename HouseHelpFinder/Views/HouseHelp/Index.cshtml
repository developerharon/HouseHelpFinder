@model ProfileViewModel

<div class="container">
    <h1 class="h3 mb-3 font-weight-normal text-center">Profile Page</h1>

    <div class="text-center" style="margin-top:35px">
        @if (Model.ProfilePicture == null)
        {
            <img src="/images/profile-pic.png" alt="profile-picture" class="rounded-circle" height="250" width="250" />
        }
        else
        {
            <img src="@Model.ProfilePictureUrl" alt="profile-picture" class="rounded-circle" height="250" width="250" />
        }
    </div>

    <div style="min-height:35px"></div>

    <table class="table table-bordered">
        <tr><th>Username:</th><td>@Model.Username</td></tr>
        <tr><th>Name:</th><td>@Model.Name</td></tr>
        <tr><th>Description:</th><td>@Model.Description</td></tr>
        <tr><th>Email:</th><td>@Model.Email</td></tr>
        <tr>
            <th>Available For Hire:</th>
            @if (Model.isAvailable)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
        </tr>
    </table>

    <div style="min-height:35px"></div>

    <h4 class="h3 mb-3 font-weight-normal text-center">Reach Out Requests</h4>
    <table class="table table-striped">
        <thead>
            <tr><th>Name</th><th>Phone</th><th>Description</th></tr>
        </thead>
        <tbody>
            @if (Model.ReachOuts.Count == 0)
            {
                <tr><td colspan="3">No Reach Outs At The Moment</td></tr>
            }
            else
            {
                @foreach (var reachout in Model.ReachOuts)
                {
                    <tr><td>@reachout.Name</td><td>@reachout.Phone</td><td>@reachout.Description</td></tr>
                }

            }
        </tbody>
    </table>
</div>