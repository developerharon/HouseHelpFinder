@model ProfileViewModel

    <div class="text-center">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" style="width:100%; max-width:330px; padding: 15px; margin: auto">
            <div class="form-group">
                <img src="@Model.ProfilePictureUrl" alt="" class="rounded-circle" height="225" width="225" />
                <input asp-for="ProfilePicture" class="small" />
                <div style="padding:3px"><span asp-validation-for="ProfilePicture" class="text-danger text-decoration-none"></span></div>
            </div>


            <h1 class="h3 mb-3 font-weight-normal">Update Profile</h1>
            <div class="form-group">
                <label asp-for="UserId" class="sr-only"></label>
                <input asp-for="UserId" class="form-control text-center" placeholder="userId" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Username" class="font-weight-bold"></label>
                <input asp-for="Username" class="form-control text-center" placeholder="username" />
                <div style="padding:3px"><span asp-validation-for="Username" class="text-danger text-decoration-none"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="font-weight-bold"></label>
                <input asp-for="Name" class="form-control text-center" placeholder="full name" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="font-weight-bold"></label>
                <textarea asp-for="Description" class="form-control blockquote" placeholder="description about yourself, your location, your expectations etc."></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="font-weight-bold"></label>
                <input asp-for="Email" class="form-control text-center" placeholder="email" />
                <div style="padding:3px"><span asp-validation-for="Email" class="text-danger text-decoration-none"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="isAvailable" class="font-weight-bold">Is Available</label>
                <select asp-for="isAvailable" class="form-control text-center">
                    <option value="">Are your available</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
            <button class="btn btn-lg btn-outline-success" type="submit">Update</button>
            <a asp-action="Index" class="btn btn-lg btn-outline-danger">Cancel</a>
        </form>
    </div>