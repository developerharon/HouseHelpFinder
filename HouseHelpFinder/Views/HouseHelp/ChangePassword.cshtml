@model ChangePasswordViewModel

<div class="text-center">
    <form asp-action="ChangePassword" asp-controller="HouseHelp" method="post" style="width:100%; max-width:330px; padding:15px; margin:auto">
        <img class="mb-4" src="/images/profile-pic.png" alt="" width="72" height="72" />
        <h1 class="h3 mb-3 font-weight-normal">Change Password</h1>

        <input type="hidden" asp-for="HouseHelpId" />

        <div class="form-group">
            <label asp-for="CurrentPassword" class="sr-only"></label>
            <input asp-for="CurrentPassword" class="form-control  text-center" placeholder="Current Password" />
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="sr-only"></label>
            <input asp-for="NewPassword" class="form-control text-center" placeholder="New Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmNewPassword" class="sr-only"></label>
            <input asp-for="ConfirmNewPassword" class="form-control text-center" placeholder="Confirm Password" />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <button class="btn btn-lg btn-outline-success" type="submit">Change Password</button>
        <a class="btn btn-lg btn-outline-danger" asp-action="Index" asp-controller="HouseHelp">Cancel</a>
    </form>
</div>